{
    "coc": {
        "preferences": {
            "formatOnSaveFiletypes": [
                "rust",
                "go",
                "python",
                "typescript",
                "typescript.tsx"
            ]
        }
    },
    "python": {
        "pythonPath": "/usr/bin/python3",
        "linting": {
            "enabled": true,
            "flake8Args": ["--max-line-length", "80"],
            "flake8Enabled": true,
            "pylintEnabled": false
        },
        "formatting": {
            "enabled": true,
            "provider": "black",
            "blackArgs": ["--line-length", "80"]
        }
    },
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "rust": {
            "command": "ra_lsp_server",
            "filetypes": ["rust"],
            "rootPatterns": ["Cargo.toml"]
        }
    },
    "suggest.autoTrigger": "trigger",
    "clangd.path": "/home/marc/.config/coc/extensions/coc-clangd-data/install/10.0.0/clangd_10.0.0/bin/clangd"
}
